<h1>Burgers!</h1>

<table>
  <tr>
    <td>
      <h2>Burgers that have not been devoured!</h2>
    </td>
    <td></td>
    <td>
      <h2>Burgers that have been devoured!</h2>
    </td>
  </tr>
  <tr>
    <td>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burger/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </td>
    <td>
      <img src="/assets/image/burger2.jpeg" alt="burger" class="image-formatter">
    </td>
    <td>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burger/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </td>
  </tr>
</table>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="burger_name" autofocus required>
  </div>

  <div class="form-group">
    <label for="dev">Devour?</label><br>
    {{!-- <input type="radio" name="devoured" value="1" checked> Devour!<br> --}}
    {{!-- <input type="radio" name="devoured" value="0"> Do not Devour!!<br> --}}
  </div>

  <button type="submit">Add Burger</button>
</form>