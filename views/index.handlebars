<h1 id="pageTitle">My Burger House</h1>

<div class="container">
  <div class="row">
    <div class="col-lg-4 grid-item">
      <h2>Burgers not devoured!</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-lg-4 grid-item">
      <img src="/assets/image/burger2.jpeg" alt="burger" class="image-formatter">
      <br><br>
      <h2 class="add-burg">Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="burger">Burger Name:</label>
          <input type="text" id="burger" name="burger_name" autofocus required>
        </div>
        <button type="submit" class="btn btn-danger">Add Burger</button>
      </form>
    </div>
    <div class="col-lg-4">
      <h2>Burgers devoured!</h2>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burger/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
